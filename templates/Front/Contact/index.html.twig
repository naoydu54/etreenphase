{% extends 'Front/layout.html.twig' %}

{% block title %}contact{% endblock %}

{% block content %}



    <main>

        <div class="container">

            <center><h2>Nous contacter</h2></center>
            <br> <br>
            {% for message in app.flashes('notice') %}
                <div class="flash-notice alert alert-success" role="alert">
                    {{ message }}
                </div>

            {% endfor %}



            {{ form_start(form) }}
            <div class="form-group">
                {{ form_row(form.company) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.object) }}
            </div>
            <div class="form-group">
                {{ form_row(form.message) }}
            </div>

            <div name="recaptcha" class="g-recaptcha" data-sitekey="6Lc0ZUYbAAAAALUuRs57w8uYQzKp4dcdzYBaPU1O"></div>

            {{ form_row(form.send) }}
            {{ form_end(form) }}
        </div>
    </main>


{% endblock %}

{% block js %}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        $('.flash-notice').fadeOut(5000)

    </script>
{% endblock %}